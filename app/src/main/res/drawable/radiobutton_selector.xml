<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue"/> <!-- Blue background -->
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="@color/blue"/> <!-- Gray border -->
        </shape>
    </item>

    <!-- Default (unchecked) state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White background -->
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#BDBDBD"/> <!-- Gray border -->
        </shape>
    </item>
</selector>

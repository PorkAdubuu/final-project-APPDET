<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/rounded_corner_bg"
    android:elevation="10dp"
    android:padding="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/lostandfound" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Need to report something?"
            android:fontFamily="@font/montserrat_extrabold"
            android:textSize="20sp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:text="Please provide accurate details so we can\n help reunite items with their rightful owners\n quickly and securely."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/reportLostBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Lost Item"
            android:layout_marginTop="20dp"
            android:paddingRight="35dp"
            android:paddingLeft="35dp"
            android:textSize="13.5sp"
            android:backgroundTint="@color/blue1"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <Button
            android:id="@+id/reportFoundBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Found Item"
            android:textSize="13sp"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/blue1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reportLostBtn" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

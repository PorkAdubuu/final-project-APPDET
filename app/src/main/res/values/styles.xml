<resources>
    <style name="FloatingActivityTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item> <!-- Make the background translucent -->
        <item name="android:backgroundDimEnabled">true</item> <!-- Dim the background -->
        <item name="android:windowBackground">@android:color/transparent</item> <!-- Transparent window background -->
        <item name="android:windowFrame">@android:color/transparent</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerRadius" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item> <!-- must be true -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>





</resources>
